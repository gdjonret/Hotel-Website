<!-- Booking Summary -->
<div class="booking-form">
    <h2 data-i18n="bookingSummary.title">Your Reservation</h2>
    <div class="summary-item">
        <span class="label" data-i18n="bookingSummary.checkIn">CHECK-IN</span>
        <div class="date-display">
            <span class="day" id="checkInDay">14</span>
            <span class="month-year" id="checkInMonthYear">September 2025</span>
        </div>
    </div>
    <div class="summary-item">
        <span class="label" data-i18n="bookingSummary.checkOut">CHECK-OUT</span>
        <div class="date-display">
            <span class="day" id="checkOutDay">15</span>
            <span class="month-year" id="checkOutMonthYear">September 2025</span>
        </div>
    </div>
    <div class="summary-item">
        <span class="label" data-i18n="bookingSummary.numberOfPersons">NUMBER OF PERSONS</span>
        <span class="value" id="numberOfGuests">1</span>
    </div>
    <div class="summary-item">
        <span class="label" data-i18n="bookingSummary.nights">NIGHTS</span>
        <span class="value" id="numberOfNights">1</span>
    </div>
    <div class="summary-item summary-total">
        <span class="value" id="totalAmount">102,000 F<span class="total-label" data-i18n="bookingSummary.totalLabel">/Total</span></span>
        <small class="tax-note" style="display: block; font-size: 0.75em; color: #6b7280; margin-top: 4px; font-style: italic;">(hors taxes)</small>
    </div>
</div>
